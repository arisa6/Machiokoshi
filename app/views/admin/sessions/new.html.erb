<div class="container">
　<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>管理者ログイン</h2>
       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <div class="form-group">
            <%= f.label :"メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control"%>
         </div>
         <div class="form-group">
          <%= f.label :"パスワード" %>
           <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
         </div>
<%# if devise_mapping.rememberable? %>
<!--<div class="field">-->
<%#= f.check_box :remember_me %>
<%#= f.label :remember_me %>
<!--</div>-->
<%# end %>

         <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary"  %>
         </div>
<% end %>
         <div class="login" style="margin-top: 60px; margin-bottom: 70px;"></div>
           <h5 class="border-bottom text-left">会員の方</h5>
           <p><%= link_to "こちら", "/customers/sign_in" %>　からログインしてください</p>
         </div>
       <%= render "admin/shared/links" %>
    </div>
  </div>
</div>