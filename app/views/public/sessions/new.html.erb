<%= render "public/shared/error_messages", resource: resource %>
<div class="container">
    <div class="row">
      <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
        <h2 class="border-bottom">ログイン</h2>
      </div>
      <div class="col-md-7 offset-1" style="margin-top:30px; ">
        <h10><span class="border-bottom">会員登録が済んでいる方</span></h10><br>
             <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group" style="margin-top: 40px;">
                  <i class="bi bi-envelope"><%= f.label :メールアドレス %></i>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email"%><br>
              </div>
              <div class="form-group">
                  <i class="bi bi-key"><%= f.label :パスワード %></i>&emsp;&emsp;
                  <%= f.password_field :password, autocomplete: "current-password"%><br>
              </div>
                <% if devise_mapping.rememberable? %>
                      <%= f.check_box :remember_me %>
                      <%= f.label :パスワードを登録する %>
                <% end %>
                <div style="margin-top: 55px;">
                  <button type="submit" class="btn btn-danger">ログイン</button>
                </div>
             <% end %>
      </div>
            <div class="col-md-4" style="margin-top:30px; ">
              <h10><span class="border-bottom">まだ会員登録されていない方</span></h10>
              <div class="actions" style="margin-top: 40px;">
                  <p>会員登録の３つのメリット</p>
                      <p>
                        １．商品情報をいち早くお届け<br>
                        ２．簡単にできます<br>
                        ３．おいしい特産物で食品ロスの削減に貢献
                      </p>
              </div>
              <div class="actions">
                   <button type="button" class="btn btn-outline-danger">
                     <%= link_to "新規会員登録", new_customer_registration_path %>
                   </button>
              </div>
            </div>
              <%= render "public/shared/links" %>
    </div>
  </div>
</div>
