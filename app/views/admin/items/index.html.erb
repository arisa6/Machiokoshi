<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        商品一覧
      </h1>
    </div>
  </div>
</section>

  <h1><%= link_to "＋ 新規追加", new_admin_item_path, class: "btn btn-dark rounded-pill" %></h1>
  
    <% @items.each do |item| %>
         <%#= attachment_image_tag item, :image %>
         <%= item.store %>
         <%#= item.name.admin_item_path(item) %>
         <%= item.name %>
         <%= item.price.to_s(:delimited) %>
         <% if item.is_active %><%# is_activeの情報を取得して在庫があるかチェック %>
              <b class="text-success">
                販売中</b><%# trueの時の表示 %>
         <% else %> <b class="text-secondary">
                販売停止中</b><%# falseの時の表示 %>
         <% end %>
         <%#= link_to "編集する", edit_admin_item_path(@item) %>
         
    <% end %>