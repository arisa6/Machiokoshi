<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1" style="margin-top:30px; ">
      <h1 class="border-bottom">会員詳細画面</h1>
    </div>
    <div class="col-md-10 offset-1" style="margin-top:30px; ">
      <table class="table">
          <tr>
             <th>会員ID</th>
             <td><%= @customer.id %></td>
          </tr>
          <tr>
              <th>氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
             <th>フリガナ</th>
             <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
             <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
             <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
             <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
             <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @customer.is_deleted %><%# is_deletedの情報を取得して退会済みかチェック %>
                <b class="text-secondary">退会</b>  <%# true(退会済み)の時の表示 %>
              <% else %>
                <b class="text-success">有効</b>  <%# false(初期値)の時の表示 %>
              <% end %>
             </td>
          </tr>
          <div class="col-md-10 offset-1" style="margin-top:30px; ">
             <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-warning" %>
             <%= link_to "注文履歴一覧を見る", admin_order_history_path(@customer), class: "btn btn-warning" %>
          </div>
    </div>
  </div>
</div>
