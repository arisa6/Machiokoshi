<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;margin-top:50px;"> <strong class="border-bottom" style="color: red;">商品を探す</strong> <button type="button" class="btn btn-outline-danger"
        disabled="disabled">ジャンルから選ぶ
             <% @genres.each do |genre| %>
              <%= link_to genre.name, public_genre_path(genre.id),class: "btn btn-outline-dark w-100" %>
             <% end %>
         </div></button>
      <div class="col-md-10">
        <h4 class="border-bottom" style="text-align: center;margin-top:30px; ">
          <%= @genre.name %></h4>
        <div class="d-flex flex-wrap justify-content-around">
          <% @items.each do |item| %>
            <div class="col-md-3">
              <ul class="list-inline">
                <% link_to public_item_path(item.id) %>
                  <%= image_tag item.get_image, size: '100x100' %><br>
                      <%= link_to public_item_path(item.id) do %> <small><%= link_to item.name,public_item_path(item.id)%><br>
                    <%= item.price.to_s(:delimited) %>円<br></small>
                  <%= (item.with_tax_price.to_s(:delimited)) %>円(税込)<br></small>
                    <% end %>
                      <%= paginate @item_page %>
                        </ui>
        </div>
            <% end %>
      </div>
    </div>
  </div>
</div>