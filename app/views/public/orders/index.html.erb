<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; "> 
     <strong class="border-bottom">注文履歴一覧画面</strong> </div>
    <div class="col-md-12 " style="text-align: center;margin-top:30px; ">
      <table class="table">
        <thead class="table">
          <tr>
            <th>注文日</th>
            <th>注文商品</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
          <tbody>
        <% @order.each do |order| %>
              <tr>
                  <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
                  <td>
                    <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %><br>
                    <% end %>
                  </td>
                  <td><%= order.status_i18n %></td>
                  <td><%= link_to "詳細", public_order_path(order), class: "btn btn-outline-danger" %></td>
              </tr>
          <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>