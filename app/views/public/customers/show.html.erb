<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
      <h2 class="border-bottom">マイページ</h2>
    </div>
    <div class="col-md offset-2" style="text-align: center;margin-top:30px; ">
      <table>
        <tr>
          <th>氏名</th>
          <td>
            <%= @customer.last_name %>
              <%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
          </td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td>
            <%= @customer.postal_code %>
          </td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td>
            <%= @customer.phone_number %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= @customer.email %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col" style="text-align: left;margin-top:30px; ">
      <p>
        <%= link_to "会員情報変更", edit_customer_path(params[:id]), class: "btn btn-danger" %>
      </p><br>
      <p>
        <%= link_to "購入履歴", orders_path(params[:id]), class: "btn btn-danger" %>
      </p><br>
      <p>
        <%= link_to "登録済み住所",addresses_path(params[:id]) , class: "btn btn-danger" %>
      </p>
    </div>
  </div>
</div>