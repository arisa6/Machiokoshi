
<div class="container">
  <div class="col-md-8 offset-md-2"> 
  <div class="shadow p-3 mb-5 bg-white rounded">
    <div class="row">
      <div class="col-md-12" style="text-align: left;">
        <h2 class="p-3 mb-2 bg-dark text-white">商品編集</h2>
       <p id="notice"></p>
        <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
        <form>
          <table class="table table-borderless">
          <tr><div class="form-group", style="text-align: left;",>
            <td><%= f.label :商品画像, class: "mr-5" %></td>
                 <td><%= f.file_field :image, accept: "image/*" %></td>
          </div>  
          </tr>
           <tr><div class="form-group">
              <div class="col-sm-10">
              <p id="notice"></p>
                <td><%= f.label :商品名, class: "mr-5" %></td>
                    <td><%= f.text_field :name %></td></tr>
                    <p id="notice"></p>
                  <tr><td><%= f.label :商品説明, class: "mr-5" %></td>
                <td><%= f.text_area :introduction %></td></tr>
               
              </div>
           </div>
            
           <tr><div class="form-group">
              <div class="col-sm-10">
              <p id="notice"></p>
                <td><%= f.label:ジャンル, class: "mr-5" %>
                   <td><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %></td><br>
                </td>
              </div>
           </div>
           </tr>
           <tr><div class="form-group">
              <div class="col-sm-10">
                <p id="notice"></p>
                  <td><%= f.label :"税抜価格(円)", class: "mr-4" %>
                <td><%= f.text_field :price %></td>
                </td>
              </div>
            </div>
            </tr>
            <tr><div class="form-group">
              <div class="col-sm-10">
                <td><%= f.label :is_active, "販売ステータス" %></td>
                <td><%= f.radio_button :is_active, :true ,{:checked => true} %>
                    <%= f.label :is_active, "販売中" %></td>
                <tr><td></td><td><%= f.radio_button :is_active, :false %>
                      <%= f.label :is_active, "販売停止中" %></td></tr>
            </div>
            </div>
            </tr>
        </table>
        <div class="form-group" style="text-align: center;">
                 <p id="notice"></p>
                  <%= f.submit ' 変更を保存 ' , class: "btn btn-outline-success" %> <%# submit等はform-groupでは囲まない %>
        </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>