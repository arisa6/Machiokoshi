<div class="container">
    <div class="row">
        <div class="col-md-2"style="margin-top: 50px; text-align: center;">
          
         <button type="button" class="btn btn-dark w-100 btn-lg">ジャンル検索</button>
        <% @genres.each do |genre| %>
          <div>
            <%= link_to genre.name, public_genre_path(genre.id),class: "btn btn-outline-dark w-100" %>
          </div>
        <% end %>
          
        </div>
           <div class="col-md-10" style="margin-top: 50px;">
              <h4 class="border-bottom">商品一覧  　<span style="font-size:20px;">(全<span style="font-size:25px;"><%= @items_all.count %></span>件)</span></h4>
              <div class="d-flex flex-wrap">
               <div class ="item_container">
              <% @items.each do |item| %>
                <%= link_to public_item_path(item.id) do %>
                      <% if item.image.attached? %>
                        <%= image_tag item.image, size: "150x150" %>
                      <% else %>
                         <%= image_tag 'no_image', size: "150x150" %>
                      <% end %>
                      <p><%= link_to item.name,public_item_path(item.id)%><br />
                    税込み <%= (item.add_tax_price.to_s(:delimited)) %>円</p>
                <% end %>
               </div>
                    <% if current_customer.already_favorited?(item) %>
                        <%= link_to public_item_favorite_path(item), method: :delete do %>
                          <i class="fas fa-heart"></i>
                        <% end %>
                       <%= item.favorites.count %>
                    <% else %>
                        <%= link_to public_item_favorite_path(item), method: :post do %>
                          <i class="far fa-heart"></i>
                        <% end %>
                        <%= item.favorites.count %>
                    <% end %>
              <% end %>
            </div>
            <div class="col-md-6 offset-md-3">
              <div class="pagination" style="justify-content: center; margin-top: 30px;">
                <!--ページネーション入れる-->
              </div>
            </div> 
        </div>
    </div>
</div>