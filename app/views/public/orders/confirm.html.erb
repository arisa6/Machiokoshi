<div class="container">
    <div class="row">
      <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
        <h4><strong class="border-bottom">注文内容の確認</strong></h4>
      </div>
      
      <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
        <table class="table">
          <thead class="table">
            <tr>
              <th></th>
              <th>商品名</th>
                <th>税込価格</th>
                <th>数量</th>
              <th>小計</th>
            </tr>
          </thead> 
            <tbody>
              <% @cart_items.each do |cart_item| %>
                <tr>
                    <th scope="row"><%= image_tag cart_item.item.get_image,size:"50x50" %></th>
                      <td><%= cart_item.item.name %></td>
                        <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
                      <td><%= cart_item.amount %></td>
                    <td><%= cart_item.subtotal.to_s(:delimited) %>円</td>
                  </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
    
    <div class="col-md-10 offset-1" style="text-align: right;margin-top:30px; ">
      <h4 class="border-bottom">合計金額
        <% @cart_items.each do |cart_item| %>
          <%= @total + @order_postage += (cart_item.item.add_tax_price)* cart_item.amount %>円
        <% end %></h4>
    </div>
    
      
      <div class="row">
        <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
          <h4><strong class="border-bottom">配送内容の確認</strong></h4>
        </div>
        <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
          <table class="table">
            <thead class="table">
              <tr>
                <th>支払方法</th>
                  <th>送料</th>
                  <th>お届け先</th>
                  <th></th>
              </tr>
            </thead> 
              
          <tbody>
                <tr>
                  <td><%= @order.payment_method  %></td>
                    <td>800円</td>
                     <td>〒<%= @order.postal_code %></td>
                     <td><%= @order.address %></td>
                </tr>
            </tbody>
          </table>
        <%= form_with model: @order,url: public_orders_path,method: :post do |f| %>
          <%= f.hidden_field :payment_method, :value => @order.payment_method %>
          <%= f.hidden_field :postal_code, :value => @order.postal_code %>
          <%= f.hidden_field :address, :value => @order.address %>
          <%= f.hidden_field :name, :value => @order.name %>
          <%= f.hidden_field :customer_id, :value => @order.customer_id %>
          <%= f.hidden_field :billing_amount, :value => @total %>
            <%= f.submit "注文を確定する", class: "btn btn-outline-danger" %>
        </div>
        <% end %>
      </div>
    </div>

  

      
