<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
      <h4><strong class="border-bottom">注文履歴詳細画面</strong></h4>
    </div>
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
      <strong>注文情報</strong>
      <table class="table">
        <thead class="table">
          <tr>
            <th scope="col">注文日</th>
            <th scope="col">配送先</th>
            <th scope="col">支払方法</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td>
              〒<%= @customer.postal_code %>
              <%= @customer.address %><br>
              <%= current_customer.last_name %>様 
            </td>
            <td><%= @order.payment_method_i18n %></td>
            <td><%= @order.status_i18n %><td></td>
          </tr>
        </tbody>
      </table>
    </div>
    
  </div>
</div>
<div class="col-md-6 offset-3" style="text-align: center;margin-top:30px; ">
  <h4><strong>注文内容</strong></h4>
  <table class="table">
    <thead class="table">
      <tr>
        <th>商品</th>
        <th>個数</th>
        <th>税込価格</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td>
            <% @order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td>
            <%= order_detail.amount %>
          </td>
          <td>
            <%= order_detail.item.with_tax_price.to_s(:delimited) %>円
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
</div>
</div>