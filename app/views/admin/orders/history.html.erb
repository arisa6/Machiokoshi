<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
      <h2 class="border-bottom"><%= @customer.last_name %><%= @customer.first_name %>様のご注文履歴</h2>

  <table class="table">
    <thead>
      <tr class="table">
        <th>購入日時</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><b class="text-success"><%= order.status %></b></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>