
<div class='container'>
  <div class='row'>
   <div class="col-md-8"style="margin-top: 50px;">
      <h2>ショッピングカート</h2>
   </div>
   <div class="col-md-4"style="text-align:right;margin-top: 50px;">
      <%= link_to "カートを空にする",  destroy_all_public_cart_items_path, method: :delete, class: "btn btn-outline-danger" %>
   </div>

   <div class="col-md-12"style="margin-top: 5px;">
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th scope="col">商品名</th>
            <th scope="col">単価</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            
            <!--<th scope="row"><%#= image_tag cart_item.item.image,size:"50x50" %></th>-->
            <td><%= cart_item.item.name %></td>
            <td>￥<%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            
            <td>
              <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更",class: "btn btn-outline-success" %>
              <% end %>
            </td>
            <td>￥<%= cart_item.subtotal.to_s(:delimited) %></td>
            
            <td><%= link_to "削除", public_cart_item_path(cart_item), method: :delete, class: "btn btn-outline-danger" %></td>
        
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
   </div>
   <div class="row">
      <div class="col-md-7 offset-md-1">
        <%= link_to "買い物を続ける", public_items_path, class: "btn btn-outline-primary w-25" %>
      </div>
      <div class="col-md-4"style="margin-bottom: 50px;">
        <table class="table">
      <td>合計金額</td>
      <% @cart_items.each do |cart_item| %>
       <% @total +=  (cart_item.item.add_tax_price)* cart_item.amount %>
      <% end %>
      <td class="font-weight-bold my-2"style="font-size:20px;">￥<%= @total.to_s(:delimited) %></td>
    </table>
    <%= link_to "購入画面に進む", new_public_order_path,class: "btn btn-outline-success w-100 btn-lg" %>
        </div>
        
  </div>
</div>
