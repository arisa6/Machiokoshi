
<div class="col-md-10 offset-md-1" style="text-align: center;margin-top:30px; ">
  <div class="slide-container">
    <div class="swiper-container"><!-- メイン表示部分 -->
      <div class="swiper-wrapper"><!-- 各スライド -->
        <div class="swiper-slide">
          <%= image_tag '(14).jpg', class: 'slide-img' %>
        </div>
        <div class="swiper-slide">
          <%= image_tag '(2).jpg', class: 'slide-img' %>
        </div>
        <div class="swiper-slide">
          <%= image_tag '(6).jpg', class: 'slide-img' %>
        </div>
      </div>
    </div>
  </div>
</div>
        
<script>
  var mySwiper = new Swiper ('.swiper-container', {
      loop: true,        //画像のループ
      autoHeight: true,
      effect: 'slide',   //切り替わるときのアニメーション
      speed: 3000,       //画像の切替スピード
      autoplay: {        //自動で動かす
      delay: 1000,
      disableOnInteraction: true
  },
      pagination: {      //ページネーション
      el: '.swiper-pagination',
      type: 'bullets',
      clickable: true
      },
  });
</script>

