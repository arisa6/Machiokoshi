<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; "> 
     <strong class="border-bottom">注文履歴一覧画面</strong> </div>
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
      <table class="table">
        <thead class="table">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
              <tr>
                  <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
                  <td>
                    〒<%= order.postal_code %><br>
                    <%= order.address %><br>
                    <%= order.name %>
                  </td>
                  <td>
                    <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %><br>
                    <% end %>
                  </td>
                        
                  <td><%= order.billing_amount %>円</td>
                  <td><%= order.status %></td>
                  <td><%= link_to "表示する", public_order_path(order), class: "btn btn-primary" %></td>
              </tr>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>