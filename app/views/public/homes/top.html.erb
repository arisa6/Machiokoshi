<div class="col-md-10 offset-md-1">
  <div class="top" style="margin-top: 30px;">
    <div class="text-right mr-5 mt-5">
      <%= link_to ' All Item List >', public_items_path ,class: "btn btn-outline-dark"%>
    </div>
  </div>
</div>

<div class="col-md-10 offset-md-1" style="text-align: center;margin-top:30px; ">
  <div class="slide-container">
    <div class="swiper-container"><!-- メイン表示部分 -->
          <div class="swiper-wrapper"><!-- 各スライド -->
            <div class="swiper-slide"><img src="/assets/(14).jpg" alt style="width: 40%; height: 10%;"></div>
            <div class="swiper-slide"><img src="/assets/(2).jpg" alt style="width: 40%; height: 10%;"></div>
            <div class="swiper-slide"><img src="/assets/(6).jpg" alt style="width: 40%; height: 10%;"></div>
          </div>
        
        <script>
            var mySwiper = new Swiper ('.swiper-container', {
              loop: true,        //画像のループ
              autoHeight: true,
              effect: 'slide',   //切り替わるときのアニメーション
              speed: 3000,       //画像の切替スピード
              autoplay: {        //自動で動かす
                delay: 1000,
                disableOnInteraction: true
              },
              pagination: {      //ページネーション
                el: '.swiper-pagination',
                type: 'bullets',
                clickable: true
              },
            });
        </script>
    </div>
  </div>
 </div>


