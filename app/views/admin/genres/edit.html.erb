<h1>Admin::Genres#edit</h1>
<p>Find me in app/views/admin/genres/edit.html.erb</p>

<div class="container" style="margin-top: 50px;">
<div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
  <div class="col-md", style="margin-top: 30px;">
    <h2 class="p-3 mb-2 bg-dark text-white">ジャンル編集</h2>
     <tbody>
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <div class="table">
          <tr>
            <label for="name">ジャンル名</label>
            <td>
              <%= f.text_field :name %>
              <%= f.submit "変更を保存", class: "btn btn-outline-success" %>
            </td>
          </tr>
        </div>
        <% end %>
     </tbody>
  </div>
</div>
</div>
</div>