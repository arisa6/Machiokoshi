<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1" style="margin-top:30px; ">
      <h1 class="border-bottom">商品編集</h1>
    </div>
    <div class="col-md-10 offset-1" style="margin-top:30px; ">
      <%= form_with model: @item, url: admin_item_path do |f| %>
        <table class="table table-hover">
          <tr>
            <th>
              <%= f.label :商品画像 %>
            </th>
            <td>
              <%= f.file_field :image, placeholder: "選択されていません", accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :ブランド %>
            </th>
            <td>
              <%= f.text_field :store, size: 40, placeholder: "ブランド名" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :商品名 %>
            </th>
            <td>
              <%= f.text_field :name, size: 40, placeholder: "商品名" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :商品説明 %>
            </th>
            <td>
              <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", size: "60x5", autofocus: true, autocomlete: "introduction" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label:ジャンル %>
            </th>
            <td>
              <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: "選択してください"} %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :税抜価格 %>
            </th>
            <td>
              <%= f.text_field :price, autofocus: true, autocomlete: "price", placeholder: 1000 %>円</td>
          </tr>
          <tr>
            <th>
              <%= f.label :販売ステータス %>
            </th>
            <td>
              <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active,"販売中" %>
                  <%= f.radio_button :is_active, :false %>
                    <%= f.label :is_active, "販売停止中" %>
            </td>
          </tr>
    </div>
    </table>
    <h3>
      <div class="col-md-10 offset-1" style="text-align: right;">
        <%= f.submit "更新" %>
      </div>
    </h3>
    <% end %>
  </div>
</div>
</div>
</div>