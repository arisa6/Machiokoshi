<div class='container'>
  <div class='row'>
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
        <h2 class="border-bottom">配送先編集</h2>
    </div>
    <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
        <%= form_with model: @address, url: public_address_path, method: :put do |f| %>
            <table class="table table-hover">
                <tr>
                  <th>郵便番号(ハイフンなし)</th>
                  <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",:size=>"40"  %></td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td><%= f.text_field :address, size:60 ,autofocus: true, autocomplete: "address",:size=>"40"  %></td>
                </tr>
                <tr>
                  <th>宛名</th>
                  <td><%= f.text_field :name, autofocus: true, autocomplete: "name",:size=>"40"  %></td>
                </tr>
            </table>
                <%= f.submit "変更内容を保存", class: "btn btn-danger" %>
        <% end %>
    </div>
  </div>
</div>