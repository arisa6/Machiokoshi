<div class="container">
  <div class="row">
  <div class="col-md">
      <thead>
        <h2 class="p-3 mb-2">ジャンル一覧・追加</h2><br> </thead>
      <tbody>
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="table" style="margin-top: 60px;">
        <label>ジャンル名</label>
          
            <%= f.text_field :name, placeholder: "ジャンル名" %>
              <%= f.submit '新規登録', class: "btn btn-outline-success" %>
         </div>
      </tbody>
  </div>
</div>
<% end %> <br>
  <!--二段に切り替える-->
  <div class="row ">
    <div class="col-md-12">
      <table class="table" style="margin-top: 60px;">
        <thead>
          <tr class="active">
           <h4>ジャンル一覧</h4>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre) ,class: "btn btn-outline-success" %>
              
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>