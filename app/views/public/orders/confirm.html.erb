<h1>注文情報確認画面</h1>
  <table class="table">
       <thead class="table">
          <tr>
            <th>商品名</th>
            <th>税込価格</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
       </thead> 
       <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td>￥<%= cart_item.subtotal.to_s(:delimited) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      </div>
      
      <div class="col-md-6">
      <table class="table">
        <tr>
          <td>支払方法</td>
            <td>
              <%= @order.payment_method  %>
            </td>
          </tr>
            <td>お届け先</td>
            <td>〒<%= @order.postal_code %><%= @order.address %></br><%= @order.name  %></td>
          </tr>
      </table>  
       </div>
      
      <div class="col-md-4 offset-2">
      <table class="table">
        <tr>
          <td>送料</td>
          <td>￥800</td>
        </tr>

        <tr>
          <% @cart_items.each do |cart_item| %>
          <% @total +=  (cart_item.item.add_tax_price)* cart_item.amount %>
          <% end %>

          <td>お届け先</td>

          <td>〒<%= @customer.postal_code %></br><%= @customer.address %></br><%= current_customer.last_name  %></td>


        </tr>
        <tr>
          <td>請求額</td>
          <td>￥<%= (@total + 800).to_s(:delimited) %></td>
        </tr>
      </table>

        <%= form_with model: @order,url: public_orders_path,method: :post do |f| %>
          <%= f.hidden_field :payment_method, :value => @order.payment_method %>
          <%= f.hidden_field :postal_code, :value => @order.postal_code %>
          <%= f.hidden_field :address, :value => @order.address %>
          <%= f.hidden_field :name, :value => @order.name %>
          <%= f.hidden_field :customer_id, :value => @order.customer_id %>
          <%= f.hidden_field :billing_amount, :value => @total %>
          <%= f.submit '注文を確定する' %>
        <% end %>
      
    </div>
  </div>
</div>